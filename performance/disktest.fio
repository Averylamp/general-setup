[global]
bs=10M
numjobs=16
size=10G
direct=1
directory=/mnt/localdisk
ioengine=libaio
runtime=1m
group_reporting
iodepth=2

[write_throughput]
stonewall
numjobs=4
rw=write
bs=1000M
size=50G

[read_throughput]
stonewall
numjobs=4
rw=read
bs=1000M
size=50G

[write_iops]
stonewall
numjobs=32
rw=randwrite
bs=4k
size=5G
iodepth=64

[read_iops]
stonewall
numjobs=32
rw=randread
bs=4k
size=5G
iodepth=64

[read_write_iops]
stonewall
numjobs=32
rw=randrw
rwmixread=70
bs=4k
size=5G
iodepth=64
